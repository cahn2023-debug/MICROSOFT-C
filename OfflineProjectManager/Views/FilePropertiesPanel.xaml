<UserControl x:Class="OfflineProjectManager.Views.FilePropertiesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
        <StackPanel x:Name="PropertiesStack">
            <!-- Header -->
            <TextBlock x:Name="HeaderText" Text="File Properties" 
                       FontSize="14" FontWeight="SemiBold"
                       Foreground="{DynamicResource ForegroundBrush}"
                       Margin="0,0,0,12"/>
            
            <!-- Thumbnail -->
            <Border x:Name="ThumbnailBorder" 
                    Width="120" Height="120" 
                    HorizontalAlignment="Left"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,0,12"
                    Visibility="Collapsed">
                <Image x:Name="ThumbnailImage" Stretch="Uniform"/>
            </Border>
            
            <!-- Basic Info -->
            <Border Background="{DynamicResource SecondaryBackgroundBrush}" 
                    CornerRadius="6" Padding="12" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="BASIC INFO" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="FileName" Style="{StaticResource ValueStyle}" TextWrapping="Wrap"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Size:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="FileSize" Style="{StaticResource ValueStyle}"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Type:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="FileType" Style="{StaticResource ValueStyle}"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Created:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="FileCreated" Style="{StaticResource ValueStyle}"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Modified:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="FileModified" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Image Info (shown for images) -->
            <Border x:Name="ImageInfoPanel" 
                    Background="{DynamicResource SecondaryBackgroundBrush}" 
                    CornerRadius="6" Padding="12" Margin="0,0,0,8"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="IMAGE INFO" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Dimensions:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ImageDimensions" Style="{StaticResource ValueStyle}"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Camera:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ImageCamera" Style="{StaticResource ValueStyle}"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Date Taken:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ImageDateTaken" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Document Info (shown for Office/PDF) -->
            <Border x:Name="DocInfoPanel" 
                    Background="{DynamicResource SecondaryBackgroundBrush}" 
                    CornerRadius="6" Padding="12" Margin="0,0,0,8"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="DOCUMENT INFO" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Author:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DocAuthor" Style="{StaticResource ValueStyle}"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Title:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DocTitle" Style="{StaticResource ValueStyle}"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Subject:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DocSubject" Style="{StaticResource ValueStyle}"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Pages:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DocPages" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
    
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </UserControl.Resources>
</UserControl>
