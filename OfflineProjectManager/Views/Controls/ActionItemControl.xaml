<UserControl x:Class="OfflineProjectManager.Views.Controls.ActionItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             Cursor="Hand">
    <UserControl.Resources>
        <Style TargetType="Border" x:Key="ItemBorderStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="16,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2D2E"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsPressed, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                    <Setter Property="Background" Value="#094771"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource ItemBorderStyle}"
            MouseLeftButtonDown="Border_MouseLeftButtonDown"
            MouseLeftButtonUp="Border_MouseLeftButtonUp">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <TextBlock Grid.Column="0"
                       Text="{Binding Icon}"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Foreground="#CCCCCC"/>

            <!-- Action Name -->
            <TextBlock Grid.Column="2"
                       Text="{Binding Name}"
                       FontSize="13"
                       FontFamily="Segoe UI"
                       VerticalAlignment="Center"
                       Foreground="#CCCCCC"/>

            <!-- Shortcut -->
            <TextBlock Grid.Column="3"
                       Text="{Binding Shortcut}"
                       FontSize="12"
                       FontFamily="Segoe UI"
                       VerticalAlignment="Center"
                       Foreground="#858585"
                       Margin="20,0,0,0"/>
        </Grid>
    </Border>
</UserControl>
