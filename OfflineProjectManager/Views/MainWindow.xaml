<Window x:Class="OfflineProjectManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:OfflineProjectManager.Views"
        xmlns:vm="clr-namespace:OfflineProjectManager.ViewModels"
        xmlns:utils="clr-namespace:OfflineProjectManager.Utils"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="800" Width="1280"
        Icon="{DynamicResource AppIconDrawing}"
        Background="{DynamicResource BackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Custom ScrollBar Style - Proportional Thumb Size Based on Content -->
        <Style TargetType="ScrollBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#3E3E42" 
                                                        CornerRadius="4">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#5E5E62"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="12"/>
                </Trigger>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="12"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Window.CommandBindings>
        <CommandBinding Command="utils:ProjectCommands.AddToTask" Executed="AddToTask_Executed" CanExecute="Command_CanExecute"/>
        <CommandBinding Command="ApplicationCommands.Find" Executed="FindCommand_Executed"/>
    </Window.CommandBindings>
    
    <!-- Keyboard Shortcuts for VS Code-style Actions -->
    <Window.InputBindings>
        <!-- Ctrl+Shift+P: Show Project Actions Dialog -->
        <KeyBinding Key="P" Modifiers="Ctrl+Shift" Command="{Binding ShowProjectActionsCommand}"/>
        
        <!-- Ctrl+Shift+N: New Project -->
        <KeyBinding Key="N" Modifiers="Ctrl+Shift" Command="{Binding CreateProjectCommand}"/>
        
        <!-- Ctrl+O: Open Project -->
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding LoadProjectCommand}"/>
        
        <!-- Ctrl+S: Save Project -->
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveProjectCommand}"/>
    </Window.InputBindings>
    
    <DockPanel>
        <!-- Modern Toolbar (VS Code Style) -->
        <Border DockPanel.Dock="Top" 
                Background="{StaticResource MenuBackgroundBrush}"
                BorderBrush="#3F3F46"
                BorderThickness="0,0,0,1"
                Height="40">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Project Dropdown Menu (VS Code Style) -->
                <Button Grid.Column="0"
                        x:Name="ProjectMenuButton"
                        Click="ProjectMenuButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="16,0"
                        Height="40"
                        Cursor="Hand"
                        ToolTip="Project Actions">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â˜°" 
                                   FontSize="18" 
                                   Foreground="#CCCCCC"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Project" 
                                   FontSize="13"
                                   Foreground="#CCCCCC"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A2D2E"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#094771"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    
                    <!-- Dropdown Menu (VS Code Style) -->
                    <Button.ContextMenu>
                        <ContextMenu x:Name="ProjectDropdownMenu"
                                     Background="#252526"
                                     BorderBrush="#3F3F46"
                                     BorderThickness="0"
                                     Placement="Bottom"
                                     StaysOpen="False"
                                     HorizontalOffset="0"
                                     VerticalOffset="0"
                                     PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=Button}}">
                            <ContextMenu.Resources>
                                <!-- Remove left icon column padding -->
                                <Style TargetType="MenuItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="MenuItem">
                                                <Border x:Name="Border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderThickness="0"
                                                        Padding="12,6">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <ContentPresenter Grid.Column="0"
                                                                          ContentSource="Header"
                                                                          VerticalAlignment="Center"/>
                                                        
                                                        <TextBlock Grid.Column="1"
                                                                   Text="{TemplateBinding InputGestureText}"
                                                                   Foreground="#858585"
                                                                   Margin="40,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsHighlighted" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#2A2D2E"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Foreground" Value="#858585"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ContextMenu.Resources>
                            <!-- PROJECT Section -->
                            <MenuItem Header="PROJECT" 
                                      IsEnabled="False"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Foreground="#858585"
                                      Background="#252526"/>
                            
                            <MenuItem Header="ðŸ†•  New Project..."
                                      Command="{Binding CreateProjectCommand}"
                                      InputGestureText="Ctrl+Shift+N"
                                      Background="#252526"
                                      Foreground="#CCCCCC"/>
                            <MenuItem Header="ðŸ“‚  Open Project..."
                                      Command="{Binding LoadProjectCommand}"
                                      InputGestureText="Ctrl+O"
                                      Background="#252526"
                                      Foreground="#CCCCCC"/>
                            <MenuItem Header="ðŸ’¾  Save Project"
                                      Command="{Binding SaveProjectCommand}"
                                      InputGestureText="Ctrl+S"
                                      Background="#252526"
                                      Foreground="#CCCCCC"/>
                            <MenuItem Header="âŒ  Close Project"
                                      Click="MenuCloseProject_Click"
                                      InputGestureText="Ctrl+Shift+W"
                                      Background="#252526"
                                      Foreground="#CCCCCC"/>
                            
                            <Separator Background="#3F3F46"/>
                            
                            <MenuItem Header="ðŸ‘¥  Resources (Personnel &amp; Contracts)..."
                                      Command="{Binding OpenResourceManagerCommand}"
                                      Background="#252526"
                                      Foreground="#CCCCCC"/>
                            
   
                            
                            <!-- WORKSPACE Section -->
                            <MenuItem Header="WORKSPACE" 
                                      IsEnabled="False"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Foreground="#858585"
                                      Background="#252526"/>
                            
                            <MenuItem Header="âž•  Add Folder..."
                                      Click="MenuAddFolder_Click"
                                      InputGestureText="Ctrl+K"
                                      Background="#252526"
                                      Foreground="#CCCCCC"/>
                            
                            <!-- SYSTEM Section -->
                            <MenuItem Header="SYSTEM" 
                                      IsEnabled="False"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Foreground="#858585"
                                      Background="#252526"/>
                            
                            <MenuItem Header="ðŸšª  Exit Application"
                                      Click="MenuExit_Click"
                                      InputGestureText="Alt+F4"
                                      Background="#252526"
                                      Foreground="#CCCCCC"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <!-- Center: Title -->
                <TextBlock Grid.Column="1"
                           Text="{Binding Title}"
                           FontSize="13"
                           Foreground="#858585"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- Right: Quick Actions -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            Margin="0,0,8,0">
                    <!-- Toggle Theme Button -->
                    <Button Content="ðŸŽ¨" 
                            Click="MenuToggleTheme_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="40"
                            Height="40"
                            FontSize="16"
                            Foreground="#CCCCCC"
                            Cursor="Hand"
                            ToolTip="Toggle Theme">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2A2D2E"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="{StaticResource AccentBrush}" Foreground="White">
            <StatusBarItem>
                <TextBlock Text="Ready" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="150" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <!-- Activity Bar (VS Code Style) -->
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="300" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300" MinWidth="200"/>
            </Grid.ColumnDefinitions>


            <!-- Activity Bar (Left Icon Bar - VS Code Style) -->
            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                    Background="#333333"
                    BorderBrush="#3F3F46"
                    BorderThickness="0,0,1,0">
                <DockPanel>
                    <!-- Top: Navigation Icons -->
                    <StackPanel DockPanel.Dock="Top">
                        <!-- Project Button -->
                        <RadioButton x:Name="ActivityProject" 
                                     IsChecked="True"
                                     GroupName="ActivityBar"
                                     ToolTip="Project Explorer"
                                     Checked="ActivityButton_Checked">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Bd" 
                                                        Width="48" Height="48"
                                                        Background="Transparent"
                                                        BorderThickness="2,0,0,0"
                                                        BorderBrush="Transparent">
                                                    <TextBlock Text="ðŸ“" 
                                                               FontSize="22"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Foreground="#858585"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="#2A2D2E"/>
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#007ACC"/>
                                                        <Setter TargetName="Bd" Property="Background" Value="#252526"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                        
                        <!-- NhÃ¢n sá»± (Personnel) Button -->
                        <RadioButton x:Name="ActivityPersonnel" 
                                     GroupName="ActivityBar"
                                     ToolTip="NhÃ¢n sá»± (Personnel)"
                                     Checked="ActivityButton_Checked">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Bd" 
                                                        Width="48" Height="48"
                                                        Background="Transparent"
                                                        BorderThickness="2,0,0,0"
                                                        BorderBrush="Transparent">
                                                    <TextBlock Text="ðŸ‘¥" 
                                                               FontSize="22"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Foreground="#858585"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="#2A2D2E"/>
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#007ACC"/>
                                                        <Setter TargetName="Bd" Property="Background" Value="#252526"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                        
                        <!-- NhÃ  tháº§u (Contractors) Button -->
                        <RadioButton x:Name="ActivityContractors" 
                                     GroupName="ActivityBar"
                                     ToolTip="NhÃ  tháº§u (Contractors)"
                                     Checked="ActivityButton_Checked">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Bd" 
                                                        Width="48" Height="48"
                                                        Background="Transparent"
                                                        BorderThickness="2,0,0,0"
                                                        BorderBrush="Transparent">
                                                    <TextBlock Text="ðŸ—ï¸" 
                                                               FontSize="22"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Foreground="#858585"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="#2A2D2E"/>
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#007ACC"/>
                                                        <Setter TargetName="Bd" Property="Background" Value="#252526"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                    </StackPanel>
                    
                    <!-- Bottom: Vertical "PROJECT TASKS" Label -->
                    <Border DockPanel.Dock="Bottom" 
                            Background="#252526"
                            BorderBrush="#3F3F46"
                            BorderThickness="0,1,0,0"
                            Padding="0,10">
                        <TextBlock Text="P R O J E C T   T A S K S"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="#858585"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Border>
                    
                    <!-- Spacer (fills remaining space) -->
                    <Border Background="Transparent"/>
                </DockPanel>
            </Border>

            <!-- Left: Project Explorer (shown when Project tab active) -->
            <views:ProjectExplorerView x:Name="ProjectExplorerPanel" Grid.Column="1" Grid.Row="0" DataContext="{Binding ExplorerViewModel}"
                                       Visibility="{Binding ElementName=ActivityProject, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}"/>
            
            <!-- Left: Personnel Panel (shown when NhÃ¢n sá»± tab active) -->
            <Border x:Name="PersonnelPanel" Grid.Column="1" Grid.Row="0" 
                    Background="{DynamicResource SidebarBrush}"
                    Visibility="{Binding ElementName=ActivityPersonnel, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                <views:PersonnelView DataContext="{Binding ResourceViewModel}"/>
            </Border>
            
            <!-- Left: Contractors Panel (shown when NhÃ  tháº§u tab active) -->
            <Border x:Name="ContractorsPanel" Grid.Column="1" Grid.Row="0" 
                    Background="{DynamicResource SidebarBrush}"
                    Visibility="{Binding ElementName=ActivityContractors, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                <views:ContractView DataContext="{Binding ResourceViewModel}"/>
            </Border>

            <GridSplitter Grid.Column="2" Grid.Row="0" HorizontalAlignment="Stretch" Background="Transparent" Width="2"/>

            <!-- Center: Preview with Zoom -->
            <Grid x:Name="FilePreviewPanel" Grid.Column="3" Grid.Row="0" Margin="0" ClipToBounds="True" TextElement.FontWeight="Normal">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Preview Header (Like Python) -->
                <DockPanel Grid.Row="0" Margin="10,8">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <ToggleButton x:Name="SelectRegionToggle" Content="âœ‚ï¸ Select Region" 
                                      Padding="30" Margin="0,0,8,0" MinWidth="120"
                                      Background="{DynamicResource AccentBrush}" Foreground="White" 
                                      BorderThickness="0" FontWeight="SemiBold"
                                      ToolTip="Enable region selection mode (for PDF/Image). Click and drag to select area."
                                      Visibility="{Binding IsRegionSelectionSupported, Converter={StaticResource BoolToVisibilityConverter}}"
                                      Checked="SelectRegionToggle_Checked"
                                      Unchecked="SelectRegionToggle_Unchecked"/>
                        <Button Content="Add to Task" Command="utils:ProjectCommands.AddToTask" 
                                Padding="30" MinWidth="100"/>
                    </StackPanel>
                    <TextBlock Text="{Binding CurrentPreviewFilePath, TargetNullValue='No file selected'}" Foreground="{DynamicResource ForegroundBrush}" Opacity="0.6" FontSize="13" VerticalAlignment="Center"/>
                </DockPanel>

                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" 
                              PreviewMouseWheel="Preview_MouseWheel"
                              x:Name="PreviewScrollViewer">
                    <Grid>
                        <!-- Placeholder text when no preview -->
                        <TextBlock Text="Select a file to preview" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   Opacity="0.5"
                                   Visibility="{Binding CurrentPreview, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                        
                        <!-- Preview Content -->
                        <ContentControl Content="{Binding CurrentPreview}" x:Name="PreviewContent">
                            <ContentControl.LayoutTransform>
                                <ScaleTransform x:Name="PreviewScaleTransform" ScaleX="1" ScaleY="1"/>
                            </ContentControl.LayoutTransform>
                        </ContentControl>
                    </Grid>
                </ScrollViewer>

                <!-- Zoom Controls Overlay (HIDDEN) -->
                <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" Margin="10,0,20,20" Visibility="Collapsed">
                     <TextBlock Text="Zoom: " Foreground="{DynamicResource ForegroundBrush}" Opacity="0.6" VerticalAlignment="Center"/>
                     <Slider x:Name="ZoomSlider" Width="100" Minimum="0.5" Maximum="3.0" Value="1.0" 
                             ValueChanged="ZoomSlider_ValueChanged" VerticalAlignment="Center"
                             IsMoveToPointEnabled="True"
                             ToolTip="Zoom Level"/>
                     <TextBlock Text="{Binding Value, ElementName=ZoomSlider, StringFormat={}{0:P0}}" 
                                Foreground="{DynamicResource ForegroundBrush}" Opacity="0.6" VerticalAlignment="Center" Width="40" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>

            <GridSplitter Grid.Column="4" Grid.Row="0" HorizontalAlignment="Stretch" Background="Transparent" Width="2"/>

            <!-- Right: Task Panel -->
            <views:TaskPanelView x:Name="TaskManagerPanel" Grid.Column="5" Grid.Row="0" DataContext="{Binding TaskViewModel}" />

            <!-- Row 1: Splitter for Gantt -->
            <GridSplitter Grid.Row="1" Grid.ColumnSpan="6" HorizontalAlignment="Stretch" Height="2" Background="Transparent"/>

            <!-- Row 2: Gantt Chart (LiveCharts2 - Phase 5) -->
            <Border x:Name="TimelinePanel" Grid.Row="2" Grid.ColumnSpan="6" Background="{StaticResource BackgroundBrush}" BorderThickness="0">
                <views:GanttChartView x:Name="GanttChart" />
            </Border>
        </Grid>
    </DockPanel>
</Window>
