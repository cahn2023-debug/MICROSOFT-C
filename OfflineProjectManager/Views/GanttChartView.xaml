<UserControl x:Class="OfflineProjectManager.Views.GanttChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:OfflineProjectManager.ViewModels"
             Background="{DynamicResource BackgroundBrush}">
    
    <!-- DataContext is set from code-behind via DI -->
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Gantt Area -->
        <Grid Grid.Column="0">
            
            <!-- Gantt Content (Now takes full area, no header row) -->
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                          x:Name="GanttScrollViewer">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Task List Header (Left) - with expand button and date range -->
                    <Border Grid.Column="0" Grid.Row="0" 
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Expand Button -->
                            <Button x:Name="ExpandButton" Grid.Column="0" Content="â›¶" 
                                    Click="ExpandButton_Click"
                                    Width="28" Height="28" Margin="8,0,0,0"
                                    ToolTip="Expand Gantt Chart to Full Screen"
                                    Background="{DynamicResource AccentBrush}" 
                                    Foreground="White" FontSize="14" FontWeight="Bold"/>
                            
                            <!-- Date Range -->
                            <TextBlock Grid.Column="1" Text="{Binding TimelineHeader}" 
                                       FontWeight="Normal" FontSize="11"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Timeline Header (Right - Canvas for month/day labels) -->
                    <Canvas x:Name="TimelineHeaderCanvas" Grid.Column="1" Grid.Row="0"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            ClipToBounds="True"/>
                    
                    <!-- Task List (Left Sidebar) -->
                    <ItemsControl Grid.Column="0" Grid.Row="1" ItemsSource="{Binding GanttItems}" 
                                  Background="{DynamicResource InputBackgroundBrush}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="36">
                                    <Grid Margin="12,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Priority/Milestone Indicator -->
                                        <TextBlock Grid.Column="0" Text="{Binding Indicator}" 
                                                   FontSize="12" VerticalAlignment="Center"/>
                                        
                                        <!-- Task Name -->
                                        <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                                   FontSize="12" 
                                                   Foreground="{DynamicResource ForegroundBrush}" 
                                                   VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Name}"/>
                                        
                                        <!-- Progress -->
                                        <TextBlock Grid.Column="2" Text="{Binding ProgressText}" 
                                                   FontSize="10" 
                                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <!-- Bottom border line -->
                                    <Border BorderBrush="{DynamicResource BorderBrush}" 
                                            BorderThickness="0,0,0,1" 
                                            VerticalAlignment="Bottom"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Timeline Grid (Right - Canvas for bars) -->
                    <Canvas x:Name="GanttCanvas" Grid.Column="1" Grid.Row="1"
                            Background="{DynamicResource BackgroundBrush}" 
                            ClipToBounds="True" MinWidth="800"/>
                </Grid>
            </ScrollViewer>
        </Grid>
        
        <!-- Summary Panel (Right) -->
        <Border Grid.Column="1" Background="{DynamicResource SecondaryBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,0,0,0">
            <StackPanel Margin="16">
                <!-- Overall Progress -->
                <Border Background="{DynamicResource GanttProgressCardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="OVERALL PROGRESS" FontSize="10" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource SecondaryForegroundBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding OverallProgressText}" FontSize="28" FontWeight="Bold" 
                                   Foreground="#16A34A" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding CompletedTasksText}" FontSize="11" 
                                   Foreground="{DynamicResource SecondaryForegroundBrush}" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Time Remaining -->
                <Border Background="{DynamicResource GanttTimeCardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="TIME REMAINING" FontSize="10" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource SecondaryForegroundBrush}" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding DaysRemaining}" FontSize="28" FontWeight="Bold" 
                                       Foreground="#2563EB"/>
                            <TextBlock Text=" Days" FontSize="14" Foreground="#2563EB" 
                                       VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                        </StackPanel>
                        <TextBlock Text="{Binding DeadlineText}" FontSize="11" 
                                   Foreground="{DynamicResource SecondaryForegroundBrush}" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Project Health -->
                <Border Background="{Binding HealthBackground}" CornerRadius="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="PROJECT HEALTH" FontSize="10" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource SecondaryForegroundBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding OverdueTasksText}" FontSize="20" FontWeight="Bold" 
                                   Foreground="{Binding HealthForeground}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding HealthMessage}" FontSize="11" 
                                   Foreground="{DynamicResource SecondaryForegroundBrush}" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
